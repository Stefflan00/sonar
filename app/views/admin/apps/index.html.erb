<h1>Listing apps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Store ID</th>
      <th>Reflink</th>
      <th>Price</th>
      <th>Alt Price</th>
      <th>Rating</th>
      <th>Thumb</th>
      <th>Description</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.store_id %></td>
        <td><%= app.reflink %></td>
        <td><%= app.price %></td>
        <td><%= app.alt_price %></td>
        <td><%= app.rating %></td>
        <td><%= app.img %></td>
        <td><%= truncate(app.description, length: 30) %></td>
        <td><%= app.genre %></td>
        <td><%= link_to 'Show',[:admin, app] %></td>
        <td><%= link_to 'Edit', edit_admin_app_path(app) %></td>
        <td><%= link_to 'Destroy', [:admin, app], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App', new_admin_app_path %>
